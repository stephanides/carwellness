extends layout

block vars
  - var pageTitle= 'CARwellness - profesionálna autoumyváreň | Kontakt'

block css
  include main-styles.pug

block content
  style.
    .social-icon {
      font-size: 21px;
    }

  .modal#contactModal
    .modal-dialog
      .modal-content
        .modal-header
          h4 Vaša správa bola odoslaná
          button.close(type='button' data-dismiss='modal') &times;
        .modal-body
          p Náš tím sa Vám bude snažiť čo najskôr odpovedať.
        .modal-footer
          button.btn.btn-danger(type='button' data-dismiss='modal') Zavrieť
  #wrapper
    include navbar.pug
        
    .container.price-listContent-noimg
      h4 Kontaktuje nás, ochotne pomôžeme.
      p Neváhajte nás kontaktovať s akoukoľvek otázkou.

    .container.contact
      .row
        .col-lg-6
          .row
            .col-md-6
              h4 Kontaktné údaje
              h6 #[strong CW ]partners s.r.o
              p Karpatské námestie 7770/10A
              p 831 06 Bratislava
              p Slovenská republika
              p &nbsp;
              p IČO: 515 568 98
              p DIČ: 2120728687
              p &nbsp;
              h6 Zodpovedný vedúci / Manager
              p Jiří Laník
              p +421 903 716 656
              p.highlight cwpartners.nr@gmail.com
            .col-md-6
              h6 Galéria Mlyny Nitra
              p Štefániková trieda 61
              p 949 01 Nitra
              p Slovenská republika
              p +421 902 606 606
              p.highlight info@carwellness.sk
              p.highlight reklamacia@carwellness.sk
              p.highlight smartcoat@carwellness.sk
        .col-lg-6.padding-left-100
          h4 Kontaktný formulár
          form(onsubmit='sendContact(this)')
            .form-group
              label(for='nameSurname') Meno a priezvisko
              input.form-control#name(placeholder='Vaše meno a priezvisko' required = "true")
            .form-group
              label(for='email') E-mailová adresa
              input.form-control#email(placeholder='Váš e-mail' type='email' required = "true")
            .form-group
              label(for='tel') Telefónne číslo
              input.form-control#tel(placeholder='Vaše telefónne číslo')
            .form-group
              label(for='sprava') Vaša správa
              textarea.form-control#message(rows='6' placeholder='Správa pre nás' required = "true")
            .form-check
              label.form-check-label 
                input.form-check-input(type='checkbox' required='true')
                p.gdpr Súhlasím so spracovaním údajov podľa nariadenia GDPR pre spracovanie údajov 
            button(type='submit') ODOSLAŤ SPRÁVU

    .container-fluid.mapcontainer     
      .row
        .col-lg-12
          h4 #[strong Car]wellness Nitra
          #mapNitra.map

    .position-relative.footerContactSection
      include footer.pug

block script
  include main-scripts.pug
  script(src='https://maps.googleapis.com/maps/api/js?libraries=places&key=AIzaSyD-OdlYGW1IfuJOVxqDXlhLCUJnLRucgPk' deffer)
  script(src='./assets/js/carwellness-main.min.js')
  script.
    mapNitra();