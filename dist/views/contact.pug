extends layout

block vars
  - var pageTitle= 'CarWellness | Kontakt'

block css
  link(rel='stylesheet' href='./assets/css/main-style.css')

block content  
  .modal#contactModal
    .modal-dialog
      .modal-content
        .modal-header
          h4 Vaša správa bola odoslaná
          button.close(type='button' data-dismiss='modal') &times;
        .modal-body
          p Náš tím sa Vám bude snažiť čo najskôr odpovedať.
        .modal-footer
          button.btn.btn-danger(type='button' data-dismiss='modal') Zavrieť
  #wrapper
    nav.navbar.navbar-expand-lg.navbar-light.fixed-top
      .container
        a.navbar-brand(href='./#')
          img(src='./assets/images/logo.png')
        button.navbar-toggler(type='button' data-toggle='collapse' data-target='#navbarCollapse')
          span.navbar-toggler-icon
        .collapse.navbar-collapse.justify-content-end#navbarCollapse
          ul.navbar-nav
            li.nav-item
              a.nav-link(href='./#') Domov
            li.nav-item
              a.nav-link(href='./sluzby') Služby
            li.nav-item
              a.nav-link(href='./cennik') Cenník
            li.nav-item
              a.nav-link(href='./galeria') Galéria
            li.nav-item
              a.nav-link.active(href='./kontakt') Kontakt
            li.nav-item
              a.nav-link(href='./reklamacia') Reklamácia
            li.nav-item
              a.nav-link.online-order(href='./online-objednavka') Online objednávka
            li.nav-item
              a.nav-link(href='https://www.instagram.com/carwellness.sk/' target = '_blank')
                i.fab.fa-instagram(style='font-size:21px;')
            li.nav-item
              a.nav-link(href='https://www.facebook.com/carwellnessaupark/' target = '_blank')
                i.fab.fa-facebook(style='font-size:21px;')
    .container.price-listContent
      h4 Kontaktuje nás, ochotne pomôžeme.
      p Neváhajte nás kontaktovať s akoukoľvek otázkou.
    .container.contact
      .row
        .col-lg-6
          .row
            .col-md-6
              h4 Kontaktné údaje
              h6 #[strong Car ]wellness s.r.o
              p J.Grešáka 2877/22
              p 085 01, Bardejov
              p Slovenská republika
              p &nbsp;
              p IČO: 46 471 308
              p DIČ: 2023405230
              p &nbsp;
              h6 Zodpovedný vedúci / Manager
              p Jiří Laník
              p +421 903 716 656
              p.highlight j.lanik@carwellness.sk
            .col-md-6
              h4 Prevádzky
              h6 Aupark Shopping Center Žilina
              p Veľká okružná 59A, -1 podlažie
              p 010 01 Žilina
              p Slovenská republika
              p +421 902 060 060
              p &nbsp;
              h6 Galéria Mlyny Nitra
              p Štefániková trieda 61
              p 949 01 Nitra
              p Slovenská republika
              p +421 902 606 606
              p.highlight info@carwellness.sk
              p.highlight reklamacia@carwellness.sk
              p.highlight smartcoat@carwellness.sk
        .col-lg-6.padding-left-100
          h4 Kontaktný formulár
          form(onsubmit='sendContact(this)')
            .form-group
              label(for='nameSurname') Meno a priezvisko
              input.form-control#name(placeholder='Vaše meno a priezvisko' required = "true")
            .form-group
              label(for='email') E-mailová adresa
              input.form-control#email(placeholder='Váš e-mail' type='email' required = "true")
            .form-group
              label(for='tel') Telefónne číslo
              input.form-control#tel(placeholder='Vaše telefónne číslo')
            .form-group
              label(for='sprava') Vaša správa
              textarea.form-control#message(rows='6' placeholder='Správa pre nás' required = "true")
            .form-check
              label.form-check-label 
                input.form-check-input(type='checkbox' required='true')
                p.gdpr Súhlasím so spracovaním údajov podľa nariadenia GDPR pre spracovanie údajov 
            button(type='submit') ODOSLAŤ SPRÁVU
    .container-fluid.mapcontainer     
      .row
        .col-lg-6
          h4 #[strong Car]wellness Žilina
          #mapZilina.map
        .col-lg-6
          h4 #[strong Car]wellness Nitra
          #mapNitra.map
    section.footer.footerContactSection
      .container
        .row
          .col-md-6
            .row
              .col
                h4 Kontakt
                .divider
            .row
              .col-md-6
                h6 #[strong Car ]wellness s.r.o
                p J.Grešáka 2877/22
                p 085 01, Bardejov
                p Slovenská republika
                p &nbsp;
